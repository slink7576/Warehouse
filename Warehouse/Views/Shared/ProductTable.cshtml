@using Warehouse.Models

<table id="table">
    <tr>
        <th onclick="SortByName()" class="mouser"><a><ins>Name</ins></a></th>
        <th onclick="SortByPrice()" class="mouser"><a><ins>Price</ins></a></th>
        <th >Date</th>
        <th class="tableavailtd">Availability</th>
        <th class="tabledesctd">Description</th>
    </tr>

    @foreach (Product c in ViewBag.Products)
    {

        <tr id="@c.Id" onclick="Select(@c.Id)">
            <td class="tablelist" id="itemname">@c.Name</td>
            <td class ="tableprice">@c.Price</td>
            <td class ="tabledate">@c.Date.ToShortDateString()</td>
            
            @if (c.Available == true)
            {
                <td class="tableavailtd">Available</td>
            }
            else
            {
                <td class="tableavailtd">Absent</td>
            }
            @if (c.Description == "")
            {
                <td class="tabledesctd">No description</td>
            }
            else
            {
                <td class="tabledesctd">@c.Description</td>
            }
            
        </tr>
    }
</table>

